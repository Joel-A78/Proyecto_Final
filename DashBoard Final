# CONEXION A LA BASE DE DATOS
# ---------------------------------------------------------------------------------

def Obtain_wins_mysql():
    try:
       conexion = mysql.connector.connect(
           host = ""
           user = ""
           password = ""
           database = ""
      )
      query = "SELECT n, piloto, nb, `%nbgp` FROM victorias_pilotos"
      df = pd.read_sql(query, conexion)
      return df 
    except Exception as e:
        print("Error:", e)
        return pd.DataFrame()
